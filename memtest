#!/bin/bash

echo RAM test. Root access please
echo
mkdir ramtest
mount -t tmpfs -o size=1G tmpfs ramtest
cd ramtest
echo write:
dd if=/dev/zero of=data_tmp bs=1M count=512
echo
echo read:
dd if=data_tmp of=/dev/null bs=1M count=512
umount -f ramtest
rm -rf ramtest
echo ____________________________
echo